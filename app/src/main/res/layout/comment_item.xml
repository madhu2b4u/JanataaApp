<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_16x">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/commentUserIV"
        android:layout_width="@dimen/margin_24x"
        android:layout_height="@dimen/margin_24x"
        android:layout_alignParentStart="true"
        android:src="@drawable/profile_iv" />

    <TextView
        android:id="@+id/commentUserTV"
        style="@style/TextView.Caption.Lexend.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8x"
        android:layout_toEndOf="@id/commentUserIV"
        android:text="Username"
        android:textColor="@color/textBlack" />

    <com.malkinfo.janataaapp.utitlis.SeeMoreTextView
        android:id="@+id/commentTV"
        style="@style/TextView.Caption.Lexend.Regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8x"
        android:layout_marginTop="@dimen/padding_4x"
        android:layout_below="@id/commentUserTV"
        android:layout_toEndOf="@id/commentUserIV"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt"
        android:textColor="@color/textBlack" />

    <TextView
        android:id="@+id/deleteCommentTV"
        style="@style/TextView.Caption.Lexend.SemiBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/commentTV"
        android:layout_marginStart="@dimen/margin_8x"
        android:layout_marginTop="@dimen/height_10x"
        android:layout_toEndOf="@id/commentUserIV"
        android:text="Delete"
        android:textColor="@color/textGrey" />

    <TextView
        android:id="@+id/commentTimeTV"
        style="@style/TextView.Caption.Lexend.Regular"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/margin_10x"
        android:layout_height="wrap_content"
        android:layout_below="@id/commentTV"
        android:layout_marginStart="@dimen/padding_16x"
        android:layout_toEndOf="@id/deleteCommentTV"
        android:text="2m"
        android:textColor="@color/textGrey" />
</RelativeLayout>