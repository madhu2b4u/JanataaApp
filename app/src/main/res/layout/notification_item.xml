<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userProfileIV"
        android:layout_width="@dimen/size_40"
        android:layout_marginStart="@dimen/padding_16x"
        android:layout_marginTop="@dimen/padding_16x"
        android:layout_marginBottom="@dimen/padding_8x"
        android:layout_height="@dimen/size_40"
        android:src="@drawable/profile_iv"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginEnd="@dimen/padding_16x"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_8x"
        android:layout_marginTop="@dimen/padding_16x"
        android:layout_marginBottom="@dimen/padding_8x"
        android:layout_toEndOf="@id/userProfileIV">

        <TextView
            android:id="@+id/userNameTV"
            style="@style/TextView.Body2.Lexend.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="@color/textBlack" />

        <TextView
            android:id="@+id/notificationContentTV"
            style="@style/TextView.Body2.Lexend.Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginStart="@dimen/padding_8x"
            android:layout_toEndOf="@id/userNameTV"
            android:text="liked your post."
            android:textColor="@color/textGrey" />

        <TextView
            android:id="@+id/notificationTimeTV"
            style="@style/TextView.Caption.Lexend.Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_4x"
            android:text="Jun 01 at 11:59 AM"
            android:textColor="@color/textGrey"
            android:layout_below="@id/userNameTV" />
    </RelativeLayout>

</RelativeLayout>