<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:gravity="center"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="40dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        card_view:cardCornerRAdius="5dp"
        android:layout_margin="@dimen/height_15x">
            <LinearLayout
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/applogos"
                        android:src="@drawable/janataalogo"
                        android:elevation="15dp"
                        android:padding="5dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginEnd="@dimen/height_15x"
                        android:layout_marginStart="@dimen/size_25"
                        android:layout_width="98dp"
                        android:layout_height="98dp"/>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profileImg"
                        android:src="@drawable/profile_iv"
                        android:elevation="15dp"
                        android:padding="5dp"
                        android:layout_centerInParent="true"
                        android:layout_alignStart="@id/applogos"
                        android:layout_marginStart="@dimen/size_50"
                        android:layout_width="98dp"
                        android:layout_height="98dp"/>

                </RelativeLayout>
               <LinearLayout
                   android:layout_weight="1"
                   android:orientation="vertical"
                   android:layout_width="0dp"
                   android:layout_gravity="center"
                   android:layout_height="wrap_content">
                   <TextView
                       android:id="@+id/follwer"
                       android:layout_marginTop="15dp"
                       android:text="@string/app_name"
                       android:textSize="20sp"
                       android:textStyle="bold"
                       android:gravity="center"
                       android:textColor="@color/black"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>
                   <TextView
                       android:id="@+id/userName"
                       android:layout_marginTop="2dp"
                       android:text="@string/join_community"
                       android:textSize="13sp"
                       android:textStyle="normal"
                       android:layout_marginBottom="10dp"
                       android:gravity="center"
                       android:textColor="#5C5A5A"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>

               </LinearLayout>
            </LinearLayout>
