<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:id="@+id/maniDawre">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:elevation="@dimen/padding_16x"
            android:layout_gravity="center"
            android:gravity="center"
            android:weightSum="2"
            android:background="@drawable/toolbar_background"
            android:backgroundTint="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/appIcon"
                android:src="@drawable/janataalogo"
                android:layout_marginStart="@dimen/size_5"
                android:layout_centerInParent="true"
                android:layout_alignParentStart="true"
                android:layout_width="@dimen/size_45"
                android:layout_height="@dimen/size_45"/>
            <TextView
                style="@style/TextView.Headline6.Lexend.SemiBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/appIcon"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/size_45"
                android:text="@string/name_app"
                android:textAlignment="center"
                android:textColor="@color/primary"
                android:textSize="20sp" />
            <ImageView
                android:id="@+id/notctHomeIV"
                android:src="@drawable/notification"
                app:tint="@color/primaryVariant"
                android:layout_marginEnd="@dimen/height_10x"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:padding="@dimen/size_5"
                android:layout_width="@dimen/size_35"
                android:layout_height="@dimen/size_35"/>

            <ImageView
                android:id="@+id/showNotiIV"
                android:layout_width="@dimen/height_15x"
                android:layout_height="@dimen/height_15x"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/height_15x"
                android:layout_marginTop="@dimen/height_15x"
                android:src="@drawable/dot"
                app:tint="@color/red" />
        </RelativeLayout>
        <androidx.core.widget.NestedScrollView
            android:id="@+id/homeNestNSV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

             <LinearLayout
                 android:orientation="vertical"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
                 <TextView
                     android:text="@string/story"
                     android:textSize="19sp"
                     android:layout_marginStart="@dimen/height_10x"
                     style="@style/TextView.Body2.Lexend.SemiBold"
                     android:textColor="@color/textGrey"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"/>
                 <LinearLayout
                     android:id="@+id/statusLL"
                     android:orientation="horizontal"
                     android:weightSum="2"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">
                     <androidx.recyclerview.widget.RecyclerView
                         android:layout_weight="2"
                         android:id="@+id/userStoryRec"
                         android:layout_gravity="center"
                         app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                         android:orientation="horizontal"
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"/>
                 </LinearLayout>

             </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_8x"
                    android:layout_marginTop="@dimen/padding_16x"
                    android:background="@color/lightGrey"/>
                <LinearLayout
                    android:id="@+id/toolHome"
                    android:orientation="vertical"
                    android:elevation="@dimen/height_15x"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/best_offer"
                        android:textSize="19sp"
                        android:layout_marginStart="@dimen/height_10x"
                        style="@style/TextView.Body2.Lexend.SemiBold"
                        android:textColor="@color/textGrey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <include
                        layout="@layout/ban_slider_view"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_8x"
                    android:layout_marginTop="@dimen/padding_16x"
                    android:background="@color/lightGrey"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/followersCountTV"
                            android:layout_weight="1"
                            style="@style/TextView.Caption.Lexend.SemiBold"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/followers"
                            android:layout_margin="@dimen/size_5"
                            android:textColor="@color/textBlack" />
                        <TextView
                            android:id="@+id/viewAllFollowersTV"
                            android:layout_weight="1"
                            style="@style/TextView.Body2.Lexend.Regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="textEnd"
                            android:text="@string/view_all"
                            android:layout_margin="@dimen/size_5"
                            android:textColor="@color/textGrey"/>

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/followerRV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_8x"
                    android:layout_marginTop="@dimen/padding_16x"
                    android:background="@color/lightGrey"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/allUserCount"
                        android:text="@string/app_name"
                        android:textSize="19sp"
                        android:layout_marginStart="@dimen/height_10x"
                        style="@style/TextView.Body2.Lexend.SemiBold"
                        android:textColor="@color/textGrey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/userRcV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_8x"
                    android:layout_marginTop="@dimen/padding_16x"
                    android:layout_marginBottom="@dimen/padding_16x"
                    android:background="@color/lightGrey"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/followerCL" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>