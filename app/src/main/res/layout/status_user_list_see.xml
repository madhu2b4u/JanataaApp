<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_16x">

        <LinearLayout
            android:weightSum="3"
            android:layout_margin="@dimen/height_10x"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userSeeImgCIV"
                android:src="@drawable/profile_iv"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="2dp"/>
            <LinearLayout
                android:layout_weight="3"
                android:orientation="vertical"
                android:layout_marginStart="15dp"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/userStatNameTV"
                    style="@style/TextView.Caption.Lexend.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_8x"
                    android:text="Username"
                    android:textColor="@color/textBlack" />

                <TextView
                    android:id="@+id/userseeTimeTV"
                    style="@style/TextView.Caption.Lexend.Regular"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/margin_10x"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_16x"
                    android:text="2m"
                    android:textColor="@color/textGrey" />

            </LinearLayout>

        </LinearLayout>


</RelativeLayout>