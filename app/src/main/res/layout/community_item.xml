<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/height_10x"
    app:cardElevation="@dimen/height_10x"
    app:cardUseCompatPadding="true"
    card_view:cardCornerRAdius="@dimen/smollmargin"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/toolbar_background"
        android:padding="@dimen/padding_16x"
        android:backgroundTint="@color/white"
        android:elevation="@dimen/padding_16x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/comIconCV"
            android:layout_gravity="center"
            android:src="@drawable/matrimony"
            android:contentDescription="@string/app_name"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>