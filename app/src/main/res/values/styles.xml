    <style name="TextView.Headline7" parent="TextView.Base">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Caption
        </item>
        <item name="autoSizeMinTextSize">8sp</item>
        <item name="autoSizeMaxTextSize">10sp</item>
