    <!-- Body1 -> 16sp -->
    <style name="TextView.Body3" parent="TextView.Base">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="autoSizeMinTextSize">16sp</item>
        <item name="autoSizeMaxTextSize">18sp</item>
