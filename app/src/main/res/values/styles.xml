<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryVariant</item>
        <item name="colorAccent">@color/onPrimary</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>


    <!-- TextViewBase -->
    <style name="TextView.Base" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/lexend_regular</item>
    </style>

    <!-- Headline5 -> 24sp -->
    <style name="TextView.Headline4" parent="TextView.Base">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline4
        </item>
        <item name="autoSizeMinTextSize">30sp</item>
        <item name="autoSizeMaxTextSize">34sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeStepGranularity">1dp</item>
    </style>

    <style name="TextView.Headline4.Lexend.Regular" parent="TextView.Headline4">
        <item name="fontFamily">@font/lexend_regular</item>
    </style>

    <style name="TextView.Headline4.Lexend.Medium" parent="TextView.Headline4">
        <item name="fontFamily">@font/lexend_medium</item>
    </style>

    <style name="TextView.Headline4.Lexend.SemiBold" parent="TextView.Headline4">
        <item name="fontFamily">@font/lexend_semibold</item>
    </style>

    <!-- Headline5 -> 24sp -->
